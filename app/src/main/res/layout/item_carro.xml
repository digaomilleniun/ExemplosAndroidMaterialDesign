<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingLeft="16dp">

    <ImageView
        android:id="@+id/imagem_carro"
        android:layout_alignParentLeft="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/ic_menu_carro"/>

    <TextView
        android:id="@+id/txt_modelo"
        android:textColor="@color/colorPrimary"
        android:layout_toRightOf="@+id/imagem_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:paddingRight="16dp"
        android:textSize="16dp"
        android:text="teste"/>

    <TextView
        android:id="@+id/txt_marca"
        android:layout_below="@+id/txt_modelo"
        android:layout_toRightOf="@+id/imagem_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textSize="12dp"
        android:text="teste"/>

    <View
        android:id="@+id/vw_divider"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/txt_modelo"
        android:layout_below="@+id/txt_marca"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>


</RelativeLayout>